{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "lib": ["es2020", "dom"],
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "./**/*.ts"
  ]
}